// tsconfig.json
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./", // Or "./src" if your code is in a 'src' folder
    "paths": {
      "@/*": ["src/*"], // Alias for 'src' folder
      "@components/*": ["src/components/*"], // Alias for 'src/components'
      "@utils/*": ["src/utils/*"] // Alias for 'src/utils'
    }
  }
}
