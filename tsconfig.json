{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./", // root is project folder
    "paths": {
      "@/*": ["src/*"], // ✅ Matches src/ and everything inside
      "@components/*": ["src/components/*"], // ✅ Matches src/components/... and nested files
      "@utils/*": ["src/utils/*"], // ✅ Matches src/utils/... and nested files
      "@navigation/*": ["src/navigation/*"] // ✅ Matches src/utils/... and nested files
    }
  }
}
